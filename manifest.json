{
  "manifest_version": 2,
  "name": "Shopee AdBlock",
  "version": "1.0",
  "description": "Remove all advertising goods from searching list on Shopee.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "96": "icons/icon96.png"
    },
    "default_title": "Shopee AdBlock"
  },
  "background": {
    "scripts": [
      "script/background.js",
      "script/asyncTracking.js"
    ],
    "persistent": false
  },
  "permissions": ["tabs", "activeTab"],
  "event_rules": [{
    "event": "declarativeContent.onPageChanged",
    "actions": [{
      "type": "declarativeContent.ShowPageAction"
    }],
    "conditions": [{
      "type": "declarativeContent.PageStateMatcher",
      "pageUrl": {
        "hostPrefix": "shopee",
        "pathContains": "search",
        "schemes": ["http", "https"]
      }
    }]
  }],
  "content_scripts": [
    {
      "matches": ["*://shopee.tw/*", "*://shopee.sg/*"],
      "run_at": "document_idle",
      "js": ["script/watch.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}